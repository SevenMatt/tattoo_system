<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow">
            <div class="card-header bg-dark text-white fw-bold">
                Novo Agendamento
            </div>

            <div class="card-body">
                <%= form_with model: @appointment do |f| %>

                    <div class="mb-3">
                        <%= f.label :title, class: "form-label" %>
                        <%= f.text_field :title, class: "form-control" %>
                    </div>

                    <div class="mb-3">
                        <%= f.label :user_id, "UsuÃ¡rios", class: "form-label" %>
                        <%= f.collection_select :user_id, @users, :id, :name {} class: "fomr-select" %>
                    </div>

                    <div class="mb-3">
                        <%= f.label :start_time, class: "form-label" %>
                        <%= f.datetime_local_field :start_time, class: "form-control" %>
                    </div>

                    
                    <div class="mb-3">
                        <%= f.label :end_time, class: "form-label" %>
                        <%= f.datetime_local_field :end_time, class: "form-control" %>
                    </div>

                    
                    <div class="d-grid">
                        <%= f.submit "Salvar", class: "btn btn-danger fw-bold" %>
                    </div>
                <% end %>

                <% if @appointment.errors.any? %>
                    <div class="alert alert-danger mt-3">
                        <ul class="mb-0">
                            <% @appointment.errors.full_messages.each do |e| %>
                                <li><%= e %></li>
                            <% end %>
                        </ul>
                    </div>
                <% end %>

            </div>
        </div>
    </div>
</div>
